<div 
	ng-controller="wServiceCtrl"
	class="addWService inner"
>
	<div class="header">
		<image src="/images/connectedObject.png" class="header-img"/>
		<h3>WSNNECTED OBJECT</h3>
	</div>
	

	<div class="content">
		
		<image src="/images/{{selectedEntity.image}}_small.png" width="50px" height="50px"/ class="icon_small">
   		<div ng-hide="editorEnabled" class="project-title">
			<h2>{{selectedEntity.name}}</h2>
      		<a href="" ng-click="editorEnabled=!editorEnabled" class="glyphicon glyphicon-pencil"></a>
    	</div>
    	<div ng-show="editorEnabled" class="project-title">
      		<input ng-model="selectedEntity.name">
      		<a href="" ng-click="editorEnabled=!editorEnabled; updateName() " class="glyphicon glyphicon-ok"></a>
    	</div>
      	<a href="" ng-click="" class="glyphicon glyphicon-cog"></a>
		<a href="" ng-click="delete()" class="glyphicon glyphicon-trash"></a>

		<div class="settings">
			<div class="wService icon">
			<div>
			
			<div class="wService title">
			<div>
			
			<div class="wService settings">
			<div>
		</div>

		<div class="actions">
			<div class="block" ng-controller="wSDataCtrl">
				<span class="title">
				Data to track
				</span>
				<image src="/images/plus_cyano.png" class="add_action" ng-click="create()"/>
				<div class="data list" >
					<div class="wSData" 
					ng-repeat="wSData in selectedEntity.wSDatas" 
					ng-click="selectWSData(wSData)"
					>
						<div class="wSData-left"></div>
						<div class="wSData-body" >{{wSData.name}}</div> 
						<div class="wSData-right"></div>
								
					</div>

				</div>
			</div>

			<div class="block" ng-controller="wSTriggerCtrl">
				<span class="title">
				Triggers
				</span>
				<image src="/images/plus_orange.png" class="add_action" ng-click="create()"/>

				<div class="trigger list">
					<div class="wSTrigger" 
					ng-repeat="wSTrigger in selectedEntity.wSTriggers" 
					ng-click="selectWSTrigger(wSTrigger)"
					>
						<div class="wSTrigger-left"></div>
						<div class="wSTrigger-body">{{wSTrigger.name}}</div> 
						<div class="wSTrigger-right"></div>
								
					</div>
				</div>
			</div>

			<div class="block" ng-controller="wSActionCtrl">
				<span class="title">
				Actions
				</span>
				<image src="/images/plus_yellow.png" class="add_action" ng-click="create()"/>

				<div class="trigger list">
					<div class="wSAction" 
					ng-repeat="wSAction in selectedEntity.wSActions" 
					ng-click="selectWSAction(wSAction)"
					>
						<div class="wSAction-left"></div>
						<div class="wSAction-body">{{wSAction.name}}</div> 
						<div class="wSAction-right"></div>
								
					</div>
				</div>
			</div>
		</div>
	</div>



</div>
